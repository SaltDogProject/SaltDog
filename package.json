{
    "name": "saltdog",
    "description": "SaltDog App",
    "author": "dorapocket",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "init": "yarn install && cd third_party/pdf.js &&  npm config set PUPPETEER_SKIP_DOWNLOAD true && yarn install && cd ../..",
        "init-with-proxy": "yarn run set-proxy && yarn run init",
        "serve": "vue-cli-service serve",
        "serve-doc": "docsify serve docs/",
        "build": "vue-cli-service build",
        "build-pdf": "node build/pdfjs.js",
        "rebuild": "electron-rebuild -f -w better-sqlite3",
        "lint": "vue-cli-service lint",
        "electron:build": "node build/prebuild.js && vue-cli-service electron:build",
        "electron:serve": "vue-cli-service electron:serve",
        "postinstall": "electron-builder install-app-deps",
        "postuninstall": "electron-builder install-app-deps",
        "dev": "yarn run electron:serve",
        "lint-fix": "eslint --ext .vue,.ts --fix ./src",
        "set-proxy": "set http_proxy=http://127.0.0.1:7890 & set https_proxy=http://127.0.0.1:7890"
    },
    "main": "background.js",
    "dependencies": {
        "@element-plus/icons": "^0.0.11",
        "@element-plus/icons-vue": "^1.1.4",
        "@mdi/font": "^6.6.96",
        "@types/better-sqlite3": "^7.5.0",
        "@types/got": "^9.6.12",
        "@types/lodash": "^4.14.176",
        "@types/markdown-it": "^12.2.3",
        "better-sqlite3": "^7.5.1",
        "bufferutil": "^4.0.5",
        "canvas": "^2.9.3",
        "core-js": "^3.6.5",
        "dayjs": "^1.10.7",
        "electron-log": "^4.4.7",
        "electron-updater": "^5.0.5",
        "element-plus": "^2.1.11",
        "eventemitter3": "^4.0.7",
        "fs-extra": "^10.0.0",
        "got": "^11.8.3",
        "hpagent": "^1.0.0",
        "htmlparser2": "^8.0.1",
        "keytar-sync": "^7.7.1",
        "licia": "^1.31.1",
        "lodash": "^4.17.21",
        "lodash-id": "^0.14.1",
        "lowdb": "^1.0.0",
        "markdown-it": "^13.0.1",
        "md5-file": "^5.0.0",
        "pdfjs-dist": "^2.14.305",
        "saltdog": "^0.0.1",
        "utf-8-validate": "^5.0.7",
        "vue": "^3.2.29",
        "vue-class-component": "^8.0.0-0",
        "vue-router": "^4.0.0-0",
        "vuex": "^4.0.0-0",
        "xss": "^1.0.13"
    },
    "devDependencies": {
        "@types/electron-devtools-installer": "^2.2.0",
        "@typescript-eslint/eslint-plugin": "^4.18.0",
        "@typescript-eslint/parser": "^4.18.0",
        "@vercel/webpack-asset-relocator-loader": "^1.7.2",
        "@vue/cli-plugin-babel": "~5.0.0",
        "@vue/cli-plugin-eslint": "~4.5.0",
        "@vue/cli-plugin-router": "~4.5.0",
        "@vue/cli-plugin-typescript": "~4.5.0",
        "@vue/cli-plugin-vuex": "~4.5.0",
        "@vue/cli-service": "^5.0.4",
        "@vue/compiler-sfc": "^3.0.11",
        "@vue/eslint-config-prettier": "^6.0.0",
        "@vue/eslint-config-typescript": "^7.0.0",
        "docsify-cli": "^4.4.3",
        "electron": "19.0.0",
        "electron-devtools-installer": "^3.1.0",
        "electron-rebuild": "^3.2.7",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-vue": "^7.9.0",
        "file-loader": "^6.2.0",
        "husky": "^7.0.4",
        "less": "^3.0.4",
        "less-loader": "^5.0.0",
        "lint-staged": "^11.2.3",
        "prettier": "^2.2.1",
        "stylus": "^0.55.0",
        "stylus-loader": "3.0.2",
        "typescript": "^4.2.4",
        "vue-cli-plugin-electron-builder": "git+https://github.com/nklayman/vue-cli-plugin-electron-builder.git"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run eslint",
            "prettier .prettierrc.js --write",
            "git add"
        ]
    }
}
