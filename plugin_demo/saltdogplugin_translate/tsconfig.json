{
    "allowSyntheticDefaultImports": true,
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "outDir": "./dist/",
        "rootDir": "./src/",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/*.ts",
        "src/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "src/**/*.d.ts"
    ]
    // "exclude": ["node_modules"]
}
